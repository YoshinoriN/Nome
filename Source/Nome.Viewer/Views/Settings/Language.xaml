<UserControl x:Class="Nome.Viewer.Views.Settings.Language"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nome.Viewer.Views.Settings"
             xmlns:service="clr-namespace:Nome.Viewer.Services"
             mc:Ignorable="d" >
    <StackPanel Margin="10">
        <TextBlock HorizontalAlignment="Center"
                   Text="{x:Static service:LanguageService.LanguageDescription}"
                   TextWrapping="NoWrap"
                   />
        <ComboBox SelectedValue="Dummy" />
    </StackPanel>
</UserControl>
